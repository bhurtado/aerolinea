@model Aerolinea.Models.ViajeView
@{
    ViewBag.Title = "Home Page";
}
<meta name="viewport" content="initial-scale=1.0, maximum-scale=2.0">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.1/css/datepicker3.min.css">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.5.0/bootstrap-table.min.css">
@Styles.Render("~/Content/owl")

@Html.Partial("_SliderPartial")
<div class="row">
    <div class="container">
        <div class="col-md-12 container body-content">
            @*<div class="panelsup" id="panel1">
                <figure>
                    <img class="img-responsive" src="http://oi60.tinypic.com/2uiumc3.jpg" width="90" alt="Logo">
                </figure>
                <label>Bullet Airline</label>
            </div>*@


            <div class="paneles col-md-4 panel panel-primary panel-heading" id="panel2">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div role="tabpanel">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs" role="tablist" id="seltab">
                            <li role="presentation" class="active"><a href="#vuelos" aria-controls="vuelos" role="tab" data-toggle="tab">Vuelos</a></li>
                            <li role="presentation" class=""><a href="#hotel" aria-controls="hotel" role="tab" data-toggle="tab">Hotel</a></li>
                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade active in" id="vuelos">
                                <div class="container contenedorizq">
                                    <div class="form">
                                        <div class="form-group">
                                            @Html.RadioButtonFor(m => m.Seleccion, true, new { @class = "radioSel", @checked = "true" })
                                            @Html.Label("Ida Y Vuelta")
                                        </div>
                                        <div class="form-group">
                                            @Html.RadioButtonFor(m => m.Seleccion, false, new { @class = "radioSel" })
                                            @Html.Label("Solo Ida")
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Desde", new { @class = "control-label col-md-1" })
                                            @Html.DropDownList("Direction", new List<SelectListItem>
                                    {
                                      new SelectListItem { Text = "Iquique", Value = "0" },
                                      new SelectListItem { Text = "Santiago", Value = "1" },
                                      new SelectListItem { Text = "Concepcion", Value = "2" },
                                      new SelectListItem { Text = "Valdivia", Value = "3" }
                                    }, new { @class = "btn btn-default dropdown-toggle" })
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Hasta", new { @class = "control-label col-md-1" })
                                            @Html.DropDownList("Direction", new List<SelectListItem>
                                    {
                                      new SelectListItem { Text = "Iquique", Value = "0" },
                                      new SelectListItem { Text = "Santiago", Value = "1" },
                                      new SelectListItem { Text = "Concepcion", Value = "2" },
                                      new SelectListItem { Text = "Valdivia", Value = "3" }
                                    }, new { @class = "btn btn-default dropdown-toggle" })
                                        </div>
                                        <div class="input-append form-group calendar">
                                            <input type="text" class="form-control" placeholder="Fecha de Ida">
                                            <span class="add-on"><i class="icon-th"></i></span>
                                        </div>
                                        <div class="input-append form-group calendar">
                                            <input type="text" class="form-control" placeholder="Fecha de Vuelta">
                                            <span class="add-on"><i class="icon-th"></i></span>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Pasajeros", new { @class = "control-label col-md-1" })
                                            @Html.DropDownList("Direction", new List<SelectListItem>
                                    {
                                      new SelectListItem { Text = "1", Value = "1" },
                                      new SelectListItem { Text = "2", Value = "2" },
                                      new SelectListItem { Text = "3", Value = "3" },
                                    }, new { @class = "btn btn-default dropdown-toggle" })

                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Categoria", new { @class = "control-label col-md-1" })
                                            @Html.DropDownList("Direction", new List<SelectListItem>
                                    {
                                      new SelectListItem { Text = "Economy", Value = "1" },
                                      new SelectListItem { Text = "Premium Economy", Value = "2" },
                                      new SelectListItem { Text = "Premium Business", Value = "3" },
                                    }, new { @class = "btn btn-default dropdown-toggle" })
                                        </div>

                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary">Buscar Vuelos</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div role="tabpanel" class="tab-pane" id="hotel">
                                <h4>
                                    LIPSUM & EQUIPMENTS
                                    Proin feugiat aliquam tortor, id hendrerit urna semper pulvinar. Nullam iaculis aliquam risus, nec tempus quam condimentum ut. Lorem Ipsum nisl, imperdiet non dictum quis, sodales quis risus. Donec condimentum gravida rhoncus. Proin sollicitudin mi eget felis congue sed adipiscing tellus vulputate. Cras suscipit aliquam sapien, non pretium turpis ullamcorper vitae. Aenean vitae libero velit, nec malesuada diam.
                                </h4>

                            </div>

                        </div>

                    </div>
                }
            </div>

            <div class="paneles col-md-7 panel panel-primary panel-heading" id="panel3">

            </div>
        </div>
    </div>

</div>



@Scripts.Render("~/bundles/jquery")
<script type="text/javascript" language="javascript" src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.1/js/bootstrap-datepicker.js"></script>
<script type="text/javascript" language="javascript" src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.5.0/bootstrap-table.min.js"></script>
@Scripts.Render("~/bundles/owl")

<script type="text/javascript">
    $(document).ready(function () {
        $(".owl-carousel").owlCarousel({
            loop:true,
            autoplay: true,
            autoplayTimeout: 1000,
            autoWidht: true,
            stopOnHover: true,
            navigation: true,
            paginationSpeed: 1000,
            goToFirstSpeed: 2000,
            items: 1,
            transitionStyle: "fade"
        });
        $('.calendar input').datepicker({
            format: "dd/mm/yyyy"

        });
        
    });
</script>



