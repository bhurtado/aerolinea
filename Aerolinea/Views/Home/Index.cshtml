@model Aerolinea.Models.ViajeView
@{
    ViewBag.Title = "Home Page";
}
<meta name="viewport" content="initial-scale=1.0, maximum-scale=2.0">
<link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.1/css/datepicker3.min.css">
<link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.5.0/bootstrap-table.min.css">
<link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
@Styles.Render("~/Content/owl")

@Html.Partial("_SliderPartial")
<div class="row">
    <div class="container">
        <div class="col-md-12 container body-content">
            @*<div class="panelsup" id="panel1">
                    <figure>
                        <img class="img-responsive img-circle" src="http://oi60.tinypic.com/2uiumc3.jpg" width="90" alt="Logo">
                    </figure>
                    <label>Bullet Airline</label>
                </div>*@


            <div class="paneles col-md-12 panel panel-primary panel-heading" id="panel2">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div role="tabpanel">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs" role="tablist" id="seltab">
                            <li role="presentation" class="active"><a href="#vuelos" aria-controls="vuelos" role="tab" data-toggle="tab">Vuelos</a></li>
                            <li role="presentation" class=""><a href="#hotel" aria-controls="hotel" role="tab" data-toggle="tab">Hotel</a></li>
                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade active in" id="vuelos">
                                <div class="contenedorfiltros">
                                    <div class="form">
                                        <div class="form-group col-md-2 grupo1">
                                            @Html.Label("Desde", new { @class = "control-label etiqueta" })
                                            @Html.DropDownList("Direction", new List<SelectListItem>
                                                {
                                                  new SelectListItem { Text = "Iquique", Value = "0" },
                                                  new SelectListItem { Text = "Santiago", Value = "1" },
                                                  new SelectListItem { Text = "Concepcion", Value = "2" },
                                                  new SelectListItem { Text = "Valdivia", Value = "3" }
                                                }, new { @class = "form-control text-center etiqueta" })
                                        </div>
                                        <div class="form-group col-md-2 grupo1">
                                            @Html.Label("Hasta", new { @class = "control-label etiqueta" })
                                            @Html.DropDownList("Direction", new List<SelectListItem>
                                                {
                                                  new SelectListItem { Text = "Iquique", Value = "0" },
                                                  new SelectListItem { Text = "Santiago", Value = "1" },
                                                  new SelectListItem { Text = "Concepcion", Value = "2" },
                                                  new SelectListItem { Text = "Valdivia", Value = "3" }
                                                }, new { @class = "form-control text-center etiqueta" })
                                        </div>
                                        <div class="input-append form-group calendar col-md-2 grupo1">
                                            <span class="add-on"><i class="fa fa-map-marker"></i></span>
                                            @Html.Label("Ida")
                                            <input type="text" class="form-control" placeholder="Fecha de Ida">
                                        </div>
                                        <div class="input-append form-group calendar col-md-2 grupo1">
                                            <span class="add-on"><i class="fa fa-map-marker"></i></span>
                                            @Html.Label("Retorno")
                                            <input type="text" class="form-control" placeholder="Fecha de Vuelta">
                                        </div>
                                        <div class="form-group col-md-2 grupo1">
                                            @Html.Label("Pasajeros", new { @class = "control-label etiqueta" })
                                            <div class="form-group form-group-lg form-group-select-plus">
                                                <div class="btn-group btn-group-select-num" data-toggle="buttons">
                                                    <label class="btn btn-primary active">
                                                        <input type="radio" name="options" />1
                                                    </label>
                                                    <label class="btn btn-primary">
                                                        <input type="radio" name="options" />2
                                                    </label>
                                                    <label class="btn btn-primary">
                                                        <input type="radio" name="options" />3
                                                    </label>
                                                    <label class="btn btn-primary">
                                                        <input type="radio" name="options" />+
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-2 grupo1">
                                            @Html.Label("Categoria", new { @class = "control-label etiqueta" })
                                            @Html.DropDownList("Direction", new List<SelectListItem>
                                            {
                                              new SelectListItem { Text = "Economy", Value = "1" },
                                              new SelectListItem { Text = "Premium Economy", Value = "2" },
                                              new SelectListItem { Text = "Premium Business", Value = "3" },
                                            }, new { @class = "form-control etiqueta" })
                                        </div>

                                        <div class="form-group col-md-12 text-center">
                                            <button type="submit" class="btn btn-default fa fa-search">
                                                @Html.Label("BUSCAR", new { @class = "control-label etiqueta", @id="btnbuscar"})
                                            </button>
                                        </div>
                                    </div>

                                    <div id="datatable" style="display:none;">
                                        <table id="table">
                                            <thead>
                                                <tr>
                                                    <th data-field="vuelo">Vuelo</th>
                                                    <th data-field="salida">Salida</th>
                                                    <th data-field="llegada">Llegada</th>
                                                    <th data-field="precio">Precio</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>

                                </div>
                            </div>

                            

                            <div role="tabpanel" class="tab-pane" id="hotel">
                                <h4>
                                    LIPSUM & EQUIPMENTS
                                    Proin feugiat aliquam tortor, id hendrerit urna semper pulvinar. Nullam iaculis aliquam risus, nec tempus quam condimentum ut. Lorem Ipsum nisl, imperdiet non dictum quis, sodales quis risus. Donec condimentum gravida rhoncus. Proin sollicitudin mi eget felis congue sed adipiscing tellus vulputate. Cras suscipit aliquam sapien, non pretium turpis ullamcorper vitae. Aenean vitae libero velit, nec malesuada diam.
                                </h4>

                            </div>

                        </div>

                    </div>
                }
            </div>

            <div class="paneles col-md-12 panel panel-primary panel-heading" id="panel3">

            </div>
        </div>
    </div>

</div>



@Scripts.Render("~/bundles/jquery")
<script type="text/javascript" language="javascript" src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.1/js/bootstrap-datepicker.js"></script>
