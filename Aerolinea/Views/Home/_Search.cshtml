@model IEnumerable<Aerolinea.Models.VueloView>

@using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @id = "regionSearch" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group col-md-12 text-center">
        <button id="btnBuscar" type="submit" value="submit" class="btn btn-default fa fa-search">BUSCAR</button>
    </div>

    <div id="tablas" class="">
        <div class="table-responsive">
            <table id="table1" class="table table-hover">
                <thead>
                    <tr class="btn-primary">
                        <th>Origen</th>
                        <th>Salida</th>
                        <th>Hora</th>
                        <th>Aeropuerto</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.First().ListaVuelosOrigen == null)
                    {
                        <tr><td>No se han encontrado vuelos disponibles.</td></tr>
                    }
                    else
                    {
                        foreach (var item in Model.First().ListaVuelosOrigen)
                        {

                            
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => item.Origen)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.FechaSalida)
                                </td>
                                <td>
                                    @Html.DisplayFor(m=> item.HoraSalida)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Aeropuerto)
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
            <table id="table2" class="table table-hover">
                    <thead>
                        <tr class="btn-primary">
                            <th>Destino</th>
                            <th>Llegada</th>
                            <th>Hora</th>
                            <th>Aeropuerto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.First().ListaVuelosDestino == null)
                        {
                            <tr><td>No se han encontrado vuelos disponibles.</td></tr>
                        }
                        else
                        {
                            foreach (var item in Model.First().ListaVuelosDestino)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(m => item.Destino)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => item.FechaDestino)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => item.HoraDestino)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => item.Aeropuerto)
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>

        </div>
    </div>
}